{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ entity.body }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ entity.author }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('post') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('post_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
            {% block comments %}
                <h4>{{ 'title.comments'|trans }}</h4>
                <div id="comments_list_div">
                    {{ include('MonstertestBundle:Comment:index.html.twig',{entities: entity.comments, addComment: addComment, issue_id:entity.id}) }}
                </div>

            {% endblock %}
    <li>
        <a href="{{ path('post_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>

    <li>{{ form(delete_form) }}</li>
</ul>

    {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript" src="{{ asset('bundles/monstertest/js/main.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/monstertest/js/jquery-2.1.4.min.js') }}"></script>
        <script>
            initAjaxForm();
        </script>
    {% endblock %}
{% endblock %}
